<div class="container mt-5 w-50">
  <div class="list-banner mt-5">
    <h1 class='text-center'>Edit our friend</h1>
  </div>
  <div class="row">
    <div class="col-12">
      <%= simple_form_for(@animal) do |f| %>
        <%= f.input :name, placeholder: 'Add the little friend name' %>
        <div class='grid-form'>
          <%= f.input :gender, placeholder: 'Add a gender' %>
          <%= f.input :age, collection: 0..30, default: 0 %>
        </div>
        <div  class='grid-form'>
          <%= f.input :size, collection: ['Small', 'Medium', 'Large', 'X-large'], default: 'Small' %>
          <%= f.input :specie, collection: ['Dog', 'Cat', 'Bird', 'Turtle', 'Fish', 'Other'], default: 'Dog' %>
        </div>
        <%= f.input :address, placeholder: 'Tell us where you found our friend' %>
        <%= f.input :description, placeholder: 'Tell more about our little friend and where you found then' %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }%>
        <%= f.submit "Update", class: "btn btn-outline-primary animal p-0" %>
      <% end %>
    </div>
  </div>
  <%= link_to 'Back', animals_path, class: 'btn btn-outline-primary animal mt-3' %>
</div>
